<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerView_savedRoutes"
    android:layout_margin="10dp"
    android:elevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraintLayoutSavedRoutes"
        android:padding="0dp" >

        <TextView
            android:id="@+id/savedRoute_name"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="5dp"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/savedRoute_begin"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/savedRoute_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="5dp"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/savedRoute_end"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedRoute_begin" />

        <TextView
            android:id="@+id/savedRoute_description"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedRoute_end" />

        <TextView
            android:id="@+id/savedRoute_duration"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedRoute_description" />

        <TextView
            android:id="@+id/savedRoute_gpx"
            android:layout_width="378dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/savedRoute_duration" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>